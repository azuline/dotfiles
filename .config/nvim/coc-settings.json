{
  "diagnostic.displayByAle": true,
  "coc.preferences.rootPatterns": [
    ".git",
    "pyproject.toml",
    "setup.py",
    ".env",
    "package.json",
    "stack.yaml"
  ],
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json"
  ],
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript", "javascript-jsdoc"],
    "typescript": ["javascript", "javascript-jsdoc"],
    "typescriptreact": ["typescript", "javascript", "javascript-jsdoc"]
  },
  "eslint.autoFixOnSave": true,
  "python.jediEnabled": false,
  "python.linting.enabled": false,
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    }
  }
}
