[colors]
background = #2d2f34
foreground = ${xrdb:color3:#1a191d}
active = #c05a33
inactive = #843e23
highlight = ${xrdb:color2:#f2d871}
error = ${xrdb:color9:#f17140}

[bar/top]
; monitor = eDP-1
width = 100%
height = 38
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = true
override-redirect = false

