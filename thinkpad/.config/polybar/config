[module/ipaddr]
type = custom/script
exec = curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//'
# exec = curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' -e 's/[0-9]*\.[0-9]*$/%.%/'
tail = true
interval = 30
format = <label>
label = " %output%"

format-padding = 0
format-underline = ${colors.background}

