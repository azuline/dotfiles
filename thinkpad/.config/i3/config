#####################
# COLORS FROM WPGTK #
#####################

set $coloract "#f2d871"
set $colorin "#843e23"
set_from_resource $color15 i3wm.color15 "#a9acb0"
set_from_resource $split i3wm.color15 "#a9acb0"
set_from_resource $coloru i3wm.color2 "#f4ac59"
set_from_resource $color0 i3wm.color0 "#1a191d"
set_from_resource $color8 i3wm.color8 "#1b1f2d"

# class                 border    backgr    text    indicator child_border
client.focused          $coloract $coloract $color15 $split  $coloract
client.focused_inactive $color0   $color0   $color15 $split  $color0
client.unfocused        $color0   $color0   $color15 $split  $color0
client.urgent           $coloru   $coloru   $color15 $coloru $coloru
client.placeholder      $color0   $color8   $color15 $color0 $color8
client.background       $color0

##############
# END COLORS #
##############

set $mod Mod4

for_window [class="^.*"] border pixel 3

font monospace 14

hide_edge_borders both

floating_modifier $mod

bindsym $mod+Return exec urxvt
bindsym $mod+q kill
bindsym $mod+space exec rofi -show run

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal/vertical orientation
bindsym $mod+g split h
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+Shift+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+p exec i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'

# Gaps
gaps inner 16

# Borders
new_window pixel 2

# floating windows
for_window [class="Pavucontrol"] floating enable

# Multimedia Keys

# volume
bindsym XF86AudioRaiseVolume exec amixer -D pulse set Master 5%+ && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec amixer -D pulse set Master 5%- && pkill -RTMIN+1 i3blocks

# mute
bindsym XF86AudioMute exec amixer sset Master toggle && killall -USR1 i3blocks

# Brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 5
bindsym XF86MonBrightnessUp exec xbacklight -inc 5

# Touchpad
#bindsym $mod+t exec synclient TouchpadOff=$((`synclient -l | grep TouchpadOff | awk '{print $3}'`==0))
exec xinput set-prop "Synaptics TM3289-002" "Device Enabled" 0

# TrackPoint
exec xinput set-prop "TPPS/2 Elan TrackPoint" "Evdev Wheel Emulation" 1
exec xinput set-prop "TPPS/2 Elan TrackPoint" "Evdev Wheel Emulation Button" 2
exec xinput set-prop "TPPS/2 Elan TrackPoint" "Evdev Wheel Emulation Timeout" 200
exec xinput set-prop "TPPS/2 Elan TrackPoint" "Evdev Wheel Emulation Axes" 6 7 4 5
exec xinput set-prop "TPPS/2 Elan TrackPoint" "Device Accel Constant Deceleration" 0.35
exec xinput set-prop "TPPS/2 Elan TrackPoint" "Device Accel Adaptive Deceleration" 6

# Screenshots
bindsym --release Print exec "scrot -s -e 'mv $f ~/images/scrots'"
bindsym --release Shift+Print exec "scrot -e 'mv $f ~/images/scrots'"

exec ~/.fehbg
exec polybar-start
exec --no-startup-id compton -cCi --respect-prop-shadow --backend glx --paint-on-overlay --vsync opengl-swc
exec nm-applet
exec blueman-applet
exec --no-startup-id light-locker
